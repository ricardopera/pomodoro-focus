{
  "name": "pomodoro-focus",
  "version": "1.5.5",
  "description": "Aplicativo Pomodoro desktop simples, eficaz e respeitoso com a atenção do usuário",
  "main": "dist/main/index.cjs",
  "type": "module",
  "author": "@ricardopera",
  "license": "MIT",
  "keywords": [
    "pomodoro",
    "focus",
    "productivity",
    "electron",
    "timer"
  ],
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "node scripts/build-electron.js && vite build",
    "build:electron": "node scripts/build-electron.js",
    "build:renderer": "vite build",
    "build:prod": "node scripts/prepare-build.js && node scripts/generate-sounds.js && node scripts/generate-icons.js && node scripts/build-electron.js && vite build",
    "preview": "electron-vite preview",
    "pack": "npm run build:prod && electron-builder --dir",
    "pack:manual": "npm run build && node scripts/pack-app.cjs",
    "dist": "npm run build:prod && electron-builder",
    "dist:win": "npm run build:prod && electron-builder --win",
    "dist:mac": "npm run build:prod && electron-builder --mac",
    "dist:linux": "npm run build:prod && electron-builder --linux",
    "dist:all": "npm run build:prod && electron-builder -mwl",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\""
  },
  "build": {
    "appId": "com.ricardopera.pomodoro-focus",
    "productName": "Pomodoro Focus",
    "copyright": "Copyright © 2025 Ricardo Pera",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "public/**/*",
      "index.html",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public/icons",
        "to": "icons",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "public/sounds",
        "to": "sounds",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "Ricardo Pera",
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": false,
      "sign": null,
      "signingHashAlgorithms": [],
      "asar": true,
      "asarUnpack": [
        "**/*.node"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Pomodoro Focus",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    },
    "portable": {
      "artifactName": "PomodoroFocus-Portable-${version}.exe"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.png",
      "category": "public.app-category.productivity",
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "Pomodoro Focus ${version}",
      "icon": "build/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build",
      "category": "Utility",
      "maintainer": "Ricardo Pera <ricardo@example.com>",
      "vendor": "Ricardo Pera",
      "synopsis": "Modern Pomodoro Timer",
      "description": "A modern Pomodoro timer desktop app built with Electron, React and TypeScript"
    },
    "appImage": {
      "license": "LICENSE"
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ]
    }
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@types/node": "^20.19.19",
    "@types/react": "^18.3.25",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/ui": "^1.6.1",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "esbuild": "^0.25.10",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jsdom": "^24.1.3",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vite": "^5.4.20",
    "vitest": "^1.6.1"
  }
}
